<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.krisandroid.noteme.AddMainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/btnBackAdd"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <EditText

        android:id="@+id/edJudul"
        android:layout_width="353dp"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="65dp"
        android:ems="10"
        android:hint="Title"
        android:inputType="textPersonName"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="108dp" />

    <EditText
        android:id="@+id/edNote"
        android:layout_width="351dp"
        android:layout_height="417dp"
        android:layout_alignStart="@+id/edJudul"
        android:layout_below="@+id/edJudul"
        android:layout_marginTop="15dp"
        android:background="@null"
        android:fontFamily="sans-serif-light"
        android:gravity="start"
        android:hint="Write your note in here"
        android:inputType="textMultiLine"
        android:padding="10dp" />


    <!--<android.support.v7.widget.Toolbar-->
        <!--android:id="@+id/toolbarLogin"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="?attr/actionBarSize"-->
        <!--app:navigationIcon="?attr/homeAsUpIndicator"-->
        <!--android:layout_marginTop="1dp"/>-->

</RelativeLayout>
